<?xml version="1.0" encoding="utf-8"?>
<set xmlns:android="http://schemas.android.com/apk/res/android">

    <objectAnimator
        android:startOffset="0"
        android:valueFrom="1.0"
        android:valueTo="0.0"
        android:propertyName="alpha"
        android:duration="0"
     />

    <objectAnimator
        android:startOffset="@integer/animation_startOffset_time"
        android:valueFrom="0.0"
        android:valueTo="1.0"
        android:propertyName="alpha"
        android:duration="0"
    />

    <objectAnimator
        android:startOffset="@integer/animation_startOffset_time"
        android:valueFrom="0.5"
        android:valueTo="0"
        android:propertyName="XFraction"
        android:duration="@integer/animation_startOffset_remaining_time"
    />

    <objectAnimator
        android:startOffset="@integer/animation_startOffset_time"
        android:valueFrom="90"
        android:valueTo="0"
        android:propertyName="rotationY"
        android:duration="@integer/animation_startOffset_remaining_time"
     />

</set>